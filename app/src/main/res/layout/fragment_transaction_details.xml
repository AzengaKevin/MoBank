<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/std_margin"
        tools:context=".ui.transactions.add.fragments.transaction.TransactionDetailsFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/std_padding"
            android:text="@string/transaction_details_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

        <include
            layout="@layout/new_transaction_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_margin" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_margin"
            android:text="@string/finish_text" />

    </LinearLayout>
</ScrollView>